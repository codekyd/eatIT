<% include ../partials/header %>
<div class="container">
    

<div class="form-group">
    <h1 class="text-center">Create a new Dish</h1>
</div>

<div class="add-dish-form">


<form action="/dishes" method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="dishName" placeholder="Add your favourite dish">
    </div>
    <div class="form-group">
        <input class="form-control" type="file" name="dishImage" placeholder="Uplaod Your dish pic">
    </div>
    <div class="form-group"> 
        <textarea   class="form-control text-center" rows="5" cols="48" name="desc" placeholder="Say Something about this Dish"></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block rounded" type="submit">Submit Dish</button>
    </div>
<p><a href="/dishes">Go back</a></p>

</form>
    
</div>
</div>

<% include ../partials/footer %>