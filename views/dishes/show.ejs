                    <div class="caption-full">
                        <h3><a href=""><%= dish.name %></a></h3>
                        
                    <p> Submitted by <strong> <em><%= dish.author.username%></em></strong></p>
                    
                    </div>
                    <p><%= dish.description%> </p>
                </div>
            </div>
            
        </div>
    </div>
    <h4>All Comments  </h4>

                    <p><a class="btn btn-success " href="/dishes/<%=dish._id%>/comments/new">Add a new comment</a></p>


                    <% dish.comments.forEach(function(comment){%>
                    
                    <p>
                    <strong><%= comment.author.username %></strong> - <%= comment.text %> 
                    </p>

                    <%})%>



                    
