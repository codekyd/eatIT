<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">#eatIT</p>
                <div class="list-group">
                <li class="list-group-item active">list 1</li>
                <li class="list-group-item">Liat 2</li>
                <li class="list-group-item">List 3</li>
                </div>
            
            </div>

            <div class="col-md-9">
                <div class="thumbnail">
                    
