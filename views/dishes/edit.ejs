<% include ../partials/header %>
<div class="container">
    

<div class="form-group">
    <h1 class="text-center">Edit :  <%= dish.name%> </h1>
</div>

<div class="add-dish-form">


<form action="/dishes/<%= dish._id%>?_method=PUT " method="POST">
    <div class="form-group">
        <input class="form-control" type="text" name="dish[name]" value="<%=dish.name%>">
    </div>
    <div class="form-group">
        <input class="form-control" type="file" name="dish[image]" value="<%=dish.image%>">
    </div>
    <div class="form-group"> 
        <textarea   class="form-control text-center" rows="5" cols="48" name="desc"><%=dish.description%></textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block rounded" type="submit">Submit Dish</button>
    </div>
<p><a href="/dishes/<%= dish._id%>">Go back</a></p>

</form>
    
</div>
</div>

<% include ../partials/footer %>